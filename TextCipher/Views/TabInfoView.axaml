<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             xmlns:vm="clr-namespace:TextCipher.ViewModels"
             x:Class="TextCipher.Views.TabInfoView"
             x:DataType="vm:TabInfoViewModel">
    <Grid RowDefinitions="*,Auto,Auto">
        <TextBox Grid.Row="0" MinHeight="200"
                 IsReadOnly="True" TextWrapping="Wrap"
                 Text="{CompiledBinding Message}" Margin="3"
                 FontSize="16"/>
        <Separator Grid.Row="1" MinHeight="10"/>
        <ProgressBar Grid.Row="2" MinHeight="20" Value="{CompiledBinding Progress}"
                     ShowProgressText="True" Margin="2"/>
    </Grid>
</UserControl>
