<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        xmlns:local="clr-namespace:SocialMediaUser"
        xmlns:viewModels="clr-namespace:SocialMediaUser.ViewModels"
        x:Class="SocialMediaUser.Views.MainView"
        x:DataType="viewModels:MainViewModel"
        ExtendClientAreaToDecorationsHint="True"
        Background="Transparent"
        TransparencyLevelHint="AcrylicBlur">
    <Window.DataTemplates>
        <local:ViewLocator/>
    </Window.DataTemplates>
    <Panel>
        <!-- global border -->
        <ExperimentalAcrylicBorder IsHitTestVisible="False">
            <ExperimentalAcrylicBorder.Material>
                <ExperimentalAcrylicMaterial BackgroundSource="Digger"
                                             TintColor="Black"
                                             TintOpacity="1"
                                             MaterialOpacity="0.65"/>
            </ExperimentalAcrylicBorder.Material>
        </ExperimentalAcrylicBorder>
        <TransitioningContentControl Content="{CompiledBinding Store.CurrentViewModel}"/>
    </Panel>
</Window>
